% https://gist.github.com/philipptempel/5220000
\def\cleardoublepage{\clearpage%
    \if@twoside
        \ifodd\c@page\else
            \vspace*{\fill}
            \hfill
            \begin{center}
            Esta página fue dejada en blanco intencionalmente.
            \end{center}
            \vspace{\fill}
            \thispagestyle{empty}
            \newpage
            \if@twocolumn\hbox{}\newpage\fi
        \fi
    \fi
}
