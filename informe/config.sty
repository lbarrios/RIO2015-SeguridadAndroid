% Paragraph config
\setlength{\parindent}{1cm}
\setlength{\parskip}{5mm plus4mm minus2mm}
% Paragraph Titles (titlesec)
\titleformat{\section}{\LARGE\bfseries\centering}{Categoría \Roman{section}}{1em}{}
\titlespacing*{\section}{0pt}{3.25ex plus 1ex minus .2ex}{0.5em}
\titleformat{\subsection}{\Large\bfseries}{\thesubsection}{1em}{}
\titlespacing*{\subsection}{0pt}{3.25ex plus 1ex minus .2ex}{0.25em}
\titleformat{\subsubsection}{\large\bfseries}{\thesubsubsection}{1em}{}
\titlespacing*{\subsubsection}{0pt}{3.25ex plus 1ex minus .2ex}{0.125em}
\titleformat{\paragraph}[hang]{\centering\normalsize\bfseries}{\theparagraph}{1em}{}
\titlespacing*{\paragraph}{0pt}{5.25ex plus 1ex minus .2ex}{1em}
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Figure config
\renewcommand{\thefigure}{\thesubsection.\arabic{figure}}
